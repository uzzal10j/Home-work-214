<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bec1"
    android:padding="10dp"

    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Home Work 214"
    android:textColor="@color/white1"
    android:layout_gravity="center"
    android:textSize="25sp"
    android:layout_marginTop="30dp"
    android:background="@drawable/bec1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        >

        <LinearLayout
            android:id="@+id/ley214_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lod"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ley214_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lod2"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        >

        <LinearLayout
            android:id="@+id/ley214_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lod3"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ley214_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.4"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:id="@+id/animationView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/result"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        >

        <LinearLayout
            android:id="@+id/ley214_5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.5"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lod5"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ley214_6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Work 214.6"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"

                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:lottie_rawRes="@raw/lod"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>

